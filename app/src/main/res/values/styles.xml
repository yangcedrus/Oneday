<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录页面弹出菜单-->
    <style name="login_pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/login_pop_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/login_pop_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="MonthPickerButton">
        <item name="android:layout_margin">@dimen/month_picker_month_button_margin</item>
        <item name="android:textSize">@dimen/month_picker_month_button_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/month_picker_month_button_background_color</item>
        <item name="android:textColor">@color/month_picker_month_button_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_style">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>

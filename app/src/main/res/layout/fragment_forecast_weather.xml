<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ForecastFragment">

    <TextView
        android:id="@+id/weather_details_location"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_details_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_min" />

    <TextView
        android:id="@+id/weather_details_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textSize="@dimen/little_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_details_weather"
        app:layout_constraintEnd_toStartOf="@+id/weather_details_weather"
        app:layout_constraintTop_toTopOf="@+id/weather_details_weather" />

    <TextView
        android:id="@+id/weather_details_pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="@dimen/little_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_details_weather"
        app:layout_constraintStart_toEndOf="@+id/weather_details_weather"
        app:layout_constraintTop_toTopOf="@+id/weather_details_weather" />

    <TextView
        android:id="@+id/weather_details_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_location" />

    <TextView
        android:id="@+id/weather_details_day1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_details_weather1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weather_details_weather1" />

    <TextView
        android:id="@+id/weather_details_day2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_details_weather2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_day1" />

    <TextView
        android:id="@+id/weather_details_day3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_details_weather3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_day2" />

    <TextView
        android:id="@+id/weather_details_day4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_details_weather4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_day3" />

    <ImageView
        android:id="@+id/weather_details_weather1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather" />

    <ImageView
        android:id="@+id/weather_details_weather2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather1" />

    <ImageView
        android:id="@+id/weather_details_weather3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather2" />

    <ImageView
        android:id="@+id/weather_details_weather4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather3" />

    <TextView
        android:id="@+id/weather_details_weather1_max"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/weather_details_weather1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/weather_details_weather1"
        app:layout_constraintTop_toTopOf="@+id/weather_details_weather1" />

    <TextView
        android:id="@+id/weather_details_weather2_max"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/weather_details_weather2"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather1" />

    <TextView
        android:id="@+id/weather_details_weather3_max"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/weather_details_weather3"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather2" />

    <TextView
        android:id="@+id/weather_details_weather4_max"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/weather_details_weather4"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_weather3" />

    <TextView
        android:id="@+id/weather_details_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/little_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/weather_details_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_details_temperature" />

</android.support.constraint.ConstraintLayout>